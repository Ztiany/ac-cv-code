<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/opengl_root_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".opengl.jwopengl.OpenGLCameraPreviewActivity"
    tools:ignore="HardcodedText">

    <android.opengl.GLSurfaceView
        android:id="@+id/opengl_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/opengl_btn_speed"
            style="@style/Button_Default"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:width="0dp"
            android:text="1.0 倍数" />

        <Button
            android:id="@+id/opengl_btn_start"
            style="@style/Button_Default"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:width="0dp"
            android:text="开始" />

        <Button
            android:id="@+id/opengl_btn_switch"
            style="@style/Button_Default"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:width="0dp"
            android:text="切换" />

    </LinearLayout>

</FrameLayout>
